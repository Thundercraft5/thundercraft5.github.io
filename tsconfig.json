{
  "extends": "@thundercraft5/tsconfig/node22.tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleDetection": "auto",
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "@mdx-js/typescript-plugin"
      },
      {
        "name": "next"
      }
    ],
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "paths": {
      "@/components": [
        "./components"
      ],
      "@/pages": [
        "./pages"
      ],
    }
  },
  "mdx": {
    "checkMdx": true,
    "plugins": [
      [
        "remark-frontmatter",
        [
          "toml",
          "yaml"
        ]
      ],
      "remark-gfm"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.mdx",
    "**/*.ts",
    "**/*.tsx",
    // ".next/typepages/_app.page.tsx   "pages/_app.tsx",
    "next.config.mts",
    ".next/dev/types/**/*.ts",
    "pages/projects/CanvasDots/ts/Workers/TreeWorker/TreeWorker.worker.ts"
  ]
}