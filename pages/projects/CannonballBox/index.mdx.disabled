        <div className={styles['vel-x']}>X velocity: 0m/s</div>
        <div className={styles['vel-y']}>Y velocity: 0m/s</div>
        <div className={styles['drag-x']}>Drag X: 0m/s</div>
        <div className={styles['drag-y']}>Drag y: 0m/s</div>
      </div>
    </div>
    <div className={styles['gridWrapper']}>
      <div className={styles['parabolicBall']}></div>
      <div className={styles['directionalArrow']}></div>
      <canvas className={styles['markerCanvas']}></canvas>

      <table className={styles['grid']} data-y="10" data-x="100" data-interval="1"></table>
    </div>
  </div>
</div>

